{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    // Note: No `baseUrl`, just the `paths`
    // We need to specify this explicitly, so that Vitest can pick it up and work
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "noErrorTruncation": true, // https://stackoverflow.com/a/53131824
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules", "**/*.e2e.ts", "cypress", "src/core/templates"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types", ".next/types/**/*.ts"]
}
